@model DatabaseLayer.PatientTable

@{
    ViewBag.Title = "Create Patient";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Create Account</title>
    <link href="~/Content/newacc.css" rel="stylesheet" />
</head>
<body>

    @using (Html.BeginForm("AddPatient", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()





        <div class="container">
            <div class="left">
                <div class="header">
                    <h4>Patient Profile</h4>
                    <hr />
                    <p>@ViewBag.Message</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>


                <div class="form">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-field animation a3", placeholder = "Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-field animation a4", placeholder = "Conctact No", type = "number" } })
                        @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        @Html.DropDownList("GenderID", null, "Gender", htmlAttributes: new { @class = "form-field animation a3" })
                        @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-field animation a4", type = "email", placeholder = "xyz@mail.com" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <br />
                    <div class="col-md-10">
                        <span class="btn btn-default btn-file">
                            @Html.TextBoxFor(model => model.LogFile, new { @class = " animation a3", type = "file", value = "Select Image", style = "" })
                        </span>
                    </div>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-field animation a4", placeholder = "Description" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <button type="submit" class="animation a6">Create Account</button>
                    @Html.ActionLink("Back to Page", "Login", "Home", new { @class = "isp" })



                </div>

            </div>

            <div class="right"></div>
        </div>


    }

</body>
</html>





















